{
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/templates/Specialization.tsx"],
	"exclude": ["dist"],
	"compilerOptions": {
		"lib": ["es6", "dom"],
		"types": ["react", "react-dom"],
		"jsx": "react",
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"moduleResolution": "node",
		"sourceMap": true,
		"plugins": [{ "name": "typescript-tslint-plugin" }],
		"resolveJsonModule": true
	}
}
